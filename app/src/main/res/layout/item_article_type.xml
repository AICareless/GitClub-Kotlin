<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="12sp"
            android:text="开源库"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_type"
            android:layout_alignBaseline="@+id/tv_type"
            android:textColor="#333333"
            android:textSize="15sp"
            android:text="EventBus" />

        <ImageView
            android:id="@+id/iv_avater"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tv_title"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_toEndOf="@+id/iv_avater"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:textColor="#666666"
            android:textSize="12sp"
            android:text="ssssss" />

        <LinearLayout
            android:id="@+id/ll_des_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:gravity="center_vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tv_des"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:textColor="#666666"
                android:textSize="12sp"
                android:text="ssssss" />

            <ImageView
                android:id="@+id/iv_cover"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:layout_margin="5dp"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_below="@+id/ll_des_img"
            android:textColor="#999999"
            android:textSize="12sp"
            android:text="2019-02-12 09:34:02" />

    </RelativeLayout>


</android.support.v7.widget.CardView>